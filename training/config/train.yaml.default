---
experiment_desc: basic_model

train:
    dataset: MNIST
    dataset_path: files/train.csv
val:
    dataset: MNIST
    dataset_path: files/train.csv

model:
    name: basic
    loss:
        name: cross_entropy_loss

optimizer:
    name: adam
    lr: 0.0001

scheduler:
    name: plateau
    mode: min
    patience: 5
    factor: 0.5
    min_lr: 0.0000001

batch_size: 16
num_epochs: 400
early_stopping: 15
validation_steps: 50
